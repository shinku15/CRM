<% if @company.errors.any? %>
$('#myModal').html("<%= j render partial: "error" %>")
$('#myModal').html('<%= j render partial:'form', :locals => {:company => @company } %>')

<% else %>

$('#myModal').modal("hide");
$("tr[data-company-id='<%= @company.id %>']").replaceWith('<%= j render partial:'company', :locals => {:company => @company } %>');
<%end%>
