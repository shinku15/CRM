<div class="row">
  <p id="notice"><%= notice %></p>

  <!-- <div class="row">
      <%= link_to 'New Notes ', new_company_note_path(@company),remote: true, 'data-toggle': "modal",'data-target': "#myModal",class: "pull-right", style: 'margin-right:10px;' %>
      <%= link_to 'New Task ', new_company_task_path(@company),remote: true, 'data-toggle': "modal",'data-target': "#myModal", class: "pull-right", style: 'margin-right:10px;' %>
  </div> -->

  <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body" style="background-color: #f5f5f5;"}
        <p>
        <h3><strong><%= @company.name %></strong></h3>
        </p>

        <p>
          <%= icon 'envelope'%>&nbsp;<strong><%= @company.email %></strong>
        </p>

        <p>
          <%= icon 'map-marker'%>&nbsp;<strong><%= @company.address %></strong>
        </p>

        <p>
          <%= icon 'phone'%>&nbsp;<strong><%= @company.contact %></strong>
        </p>

        <p>
          <%= icon 'building-o'%>&nbsp;<strong><%= @company.organization.name%></strong>
        </p>
      </div>
      </div>
  </div>

<div class="col-md-5">

<div class="container-fluid">
    <div class="row-fluid">

        <div class="span8 well">

            <ul class="nav nav-tabs">
                <li class="active pull-right"> <a data-target="#note" data-toggle="tab">Note</a></li>
                <li class="pull-right"><a data-target="#task" data-toggle="tab">Task</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active fade in" id="note"><%= render partial: "notes/form1" %></div>
                <div class="tab-pane" id="task"><%= render partial: "tasks/form1" %></div>
            </div>

        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div>
          <%= form_tag company_path, method: :get, class: "form-inline", remote: :true do %>
            <div class="form-group">
              <%= select_tag "option", options_for_select(@opt.collect {|p| [ p['name'], p['id'] ] }, params[:option]) %>
              </div>

              <div class="form-group">
                <%= submit_tag "Search", class: "btn" %>
              </div>
            <% end %>
          </div>
          <br/>
          <div class="span8 well">
            <div class="panel panel-default">
                <table class="table table-striped table-bordered table-hover" id="company_feed">

                    <tbody>
                      <%= render collection: @feeds, partial: 'feed' %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</div>

<div class="col-md-4">

<div class="panel panel-default">
<h3 class="text-justify" > &nbsp;
Due Tasks </h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-hover" id="company_task">
            <tbody>
              <%= render collection: @tasks, partial: 'tasks/task' %>
            </tbody>
        </table>
    </div>
</div>


</div>
</div>
