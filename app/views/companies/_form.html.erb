<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_for company, html: { id: 'new_company' }, remote: true do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Company</h4>
      </div>


      <% if company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>
              <ul>
                <% company.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
         </div>
       <% end %>


  <div class="modal-body">

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name,class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true,class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_area :address,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :contact %>
      <%= f.text_field :contact,class: "form-control" %>
    </div>

      <%= f.hidden_field :organization_id, value: current_user.organization_id %>
    </div>

  <div class="modal-footer">

    <div class="form-group">
      <%= f.submit class: "btn btn-default btn-success form-control"%>
    </div>
  </div>

    <% end %>
  </div>
</div>
