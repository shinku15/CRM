<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <h1>
      <strong>Company</strong>
      <%= link_to "New Company", new_company_path, id: 'new_link',remote: true,
      'data-toggle': "modal",'data-target': "#myModal",
      class: "btn btn-primary pull-right" %>
    </h1>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-md-12">
    <%= form_tag companies_path, method: :get, class: "form-inline",id: "search" ,remote: :true do %>
      <div class="form-group">
        <%= email_field_tag :email, params[:email],class: "form-control",
        placeholder: "email"%>
       </div>

       <div class="form-group">
         <%= text_field_tag :name, params[:name],class:"form-control",
         placeholder: "name"%>
        </div>

        <!-- <div class="form-group">
          <%= submit_tag "Search", class: "btn" %>
        </div> -->
      <% end %>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <table id="company" class="table table-striped table-bordered table-hover">
        <tbody>
          <%= render @companies %>
        </tbody>
      </table>
    </div>
  </div>
</div>
