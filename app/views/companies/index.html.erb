<p id="notice"><%= notice %></p>

<div class="row">
<%= link_to "New Company", new_company_path, id: 'new_link',remote: true,'data-toggle': "modal",'data-target': "#myModal",class: "pull-right" %>
<div>


<div>
  <%= form_tag companies_path, method: :get, class: "form-inline" do %>
   
      <div class="form-group">
          <%= email_field_tag :email, params[:email],class: "form-control", placeholder: "email"%>
       </div>

       <div class="form-group">
          <%= text_field_tag :name, params[:name],class:"form-control", placeholder: "name"%>
        </div>

        <div class="form-group">
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
  <% end %>
</div>


<h1>Companies</h1>

<div class="panel panel-default">

<table id="company" class="table table-striped table-bordered table-hover">
 

  <tbody>
    <%= render @companies %>
  </tbody>
</table>

</div>



