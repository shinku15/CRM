<p id="notice"><%= notice %></p>

<div class="row">
<%= link_to "New Company", new_company_path, id: 'new_link',remote: true,'data-toggle': "modal",'data-target': "#myModal",class: "pull-right" %>
<div>


<div>
  <%= form_tag companies_path, method: :get do %>
      <div class="field">
        <%= label_tag :email %>
        <%= email_field_tag :email, params[:email]%>
      </div>

      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name, params[:name]%>
      </div>
      <br />
    <%= submit_tag "Post", class: "btn btn-primary" %>
  <% end %>
</div>


<h1>Companies</h1>

<div class="panel panel-default">

<table id="company" class="table table-striped table-bordered table-hover">
 

  <tbody>
    <%= render @companies %>
  </tbody>
</table>

</div>



